<div class="navbar">
  <a href="/"><img src="/images/logo/circuit_logo_full.svg" alt="Circuit Logo"></a>
  <div class="navRight">
    <h4>HI, {{user.firstname}}</h4>
    <a href="/logout"><img src="/images/icon/logout.svg" alt="Logout"></a>
  </div>
</div>

<div class="container-fluid">

  <div class="row headerRow">
    <div class="sectionHeader">
      <h2>Circuit Details</h2>
    </div>
  </div>

  <div class="createCircuitContainer container row col-sm-auto">

    <form action="/finish-create/{{circuit._id}}" id="new-circuit-form" class="circuit-form" method="post">

      <div class="row question">
        <h4>What do you want to name your Circuit?</h4>
        <input type="text" class="nameOfCircuit" name="nameOfCircuit" placeholder="Give it a name">
      </div>

      <div class="row question">
        <h4>How many reps of each exercise?</h4>
      </div>

      <div class="row fullExercises">

      {{#each excercises }}
        <div class="row">

          <div class="card exerciseSelected exerciseContainer col-md-4">
            <img class="card-img-top" src="{{this.imageURL}}" alt="{{this.name}} illustration.">
            <div class="card-body circuitInfo row">
              <h4 class="card-text">{{this.name}}</h4>
            </div>
          </div> 

          <div class="col-md-4 reps">
            <input type="number" class="exerciseReps" name="exerciseReps" placeholder="# of reps">
            <input type="number" class="exerciseWeight" name="exerciseWeight" placeholder="lbs"> <p>lbs (optional)</p>
          </div> 

        </div>
        <hr>
      {{/each }}

      </div>
  {{!-- {{#each exercise}}
        <div class="card row exerciseContainer col-md-3">
          <img class="card-img-top" src="{{this.imageURL}}" alt="Card image cap"> --}}
          {{!-- <div class="card-body circuitInfo row">
            <h4 class="card-text">{{this.name}}</h4>
          </div> --}}
          {{!-- <input id="exerciseId" type="hidden" name="id" value="{{this._id}}">
        </div>
      {{/each}} --}}
      <div class="row question">
        <h4>How many sets do you want to complete?</h4>
        <input type="number" class="numberOfSets" name="numberOfSets" placeholder="# of sets">
      </div>

      <div class="row question">
        <h4>How much rest time do you want between sets?</h4>
        <input type="number" class="restTime" name="restTime" placeholder="seconds"> <p>seconds</p>
      </div>

      <button id="create-circuit" class="primaryFill" type="submit">SAVE CIRCUIT</button>
    </form>

  </div> {{!-- Close createCircuitContainer --}}




</div> {{!-- Close container-fluid --}}
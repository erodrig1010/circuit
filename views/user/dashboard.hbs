<div class="navbar">
  <a href="/"><img src="/images/logo/circuit_logo_full.svg" alt="Circuit Logo"></a>
  <div class="navRight">
    <h4>HI, {{user.firstname}}</h4>
    <a href="/logout"><img src="/images/icon/logout.svg" alt="Logout"></a>
  </div>
</div>

<div class="container-fluid">
  <div class="row headerRow justify-content-start">
    <div class="sectionHeader" id="myCircuitsHeader">
      <h2>My Circuits</h2>
    </div>
    <div class="createButtonContainer">
      <a href="/circuit/select-exercises"><button class="primaryFill create" id="createRedirectButton">+  CREATE A CIRCUIT</button></a>
    </div>
  </div>

  <div class="row myCircuits"></div>
    {{#each circuits}}
    <div class="card circuitContainer">
      <div class="circuitContainerTitle">
        <h4 class="card-header">{{this.name}}</h4>
      </div>
      <div class="card-body">
        <p class="card-text"><strong># of Exercises:</strong> {{this.exercises.length}}</p>
        <p class="card-text"><strong>Rest Time:</strong> {{this.rest}}</p>
        <a href="#"><button class="primaryFill edit" id="editRedirectButton">EDIT</button></a>
        <a href="#"><button class="primaryFill delete" id="deletetButton">DELETE</button></a>
      </div>
    </div>
    {{/each}}
  </div>


</div>  {{!-- Closes container-fluid div --}}